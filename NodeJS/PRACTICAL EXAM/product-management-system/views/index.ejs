<!DOCTYPE html>
<html>
<head>
  <title>Product Management</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1>Product Management</h1>
    <a href="/addProduct" class="btn btn-primary">Add Product</a>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Product Code</th>
          <th>Product Name</th>
          <th>Product Date</th>
          <th>Product Origin Price</th>
          <th>Quantity</th>
          <th>Product Store Code</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
          <tr>
            <td><%= product.ProductCode %></td>
            <td><%= product.ProductName %></td>
            <td><%= product.ProductDate.toDateString() %></td>
            <td><%= product.ProductOriginPrice %></td>
            <td><%= product.Quantity %></td>
            <td><%= product.ProductStoreCode %></td>
            <td>
              <form action="/delete/<%= product.ProductCode %>" method="POST">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
